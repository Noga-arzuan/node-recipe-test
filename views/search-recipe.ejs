<%- include ('partials/header.ejs'); -%>
<div class="container">
        <% if (message != '') { %>
            <p class="text-center text-danger"><%= message %></p>
        <% } %>
        <form class="add-recipe-form" action="" method="post" enctype="multipart/form-data">
            <div class="form-row">
                  <div class="form-group col-md-4">
                    <input type="text" class="form-control" name="id" id="id" placeholder="id" required>
                </div>
                
                 <div class="form-group col-md-4">
                    <input type="text" class="form-control" name="protein" id="protein" placeholder="protein" required>
                </div>
                <div class="form-group col-md-4">
                    <input type="text" class="form-control" name="carb" id="carb" placeholder="carb" required>
                </div>
              <div class="form-group col-md-4">
                    <input type="text" class="form-control" name="vegetable" id="vegetable" placeholder="vegetable" required>
                </div>
                  <div class="col-md-12">
                    <label for="recipe-img"><b>Recipe Image</b></label><br>
                    <input type="file" name="image" id="recipe-img" class="" required>
                </div>
           
            <button type="submit" class="btn btn-primary float-right">Search Recipe</button>
        </form>
    </div>
</div>

</body>
</html>